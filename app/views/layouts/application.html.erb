<!DOCTYPE html>
<html>
<head>
  <title>Listenpledge</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <% if notice || alert %>
    <div class="span12">
      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
